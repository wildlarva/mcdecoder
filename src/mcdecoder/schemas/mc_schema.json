{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "machine": {
            "type": "object",
            "properties": {
                "extras": {}
            },
            "additionalProperties": false
        },
        "instructions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "^[A-Za-z]\\w*$"
                    },
                    "format": {
                        "type": "string",
                        "pattern": "^[\\w\\s\\[\\]:,|]*$"
                    },
                    "condition": {
                        "type": "object",
                        "patternProperties": {
                            "^[A-Za-z]\\w*$": {
                                "type": "string",
                                "pattern": "^[\\w\\s\\-!=><]*$"
                            }
                        },
                        "additionalProperties": false
                    },
                    "extras": {},
                    "field_extras": {
                        "type": "object",
                        "patternProperties": {
                            "^[A-Za-z]\\w*$": {}
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "format"
                ]
            }
        },
        "decoder": {
            "type": "object",
            "properties": {
                "namespace": {
                    "type": "string",
                    "pattern": "^[A-Za-z]\\w*$"
                }
            },
            "additionalProperties": false
        },
        "extras": {}
    },
    "additionalProperties": false,
    "required": [
        "machine",
        "instructions"
    ]
}