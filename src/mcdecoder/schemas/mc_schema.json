{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "machine": {
            "type": "object",
            "properties": {
                "decoder": {
                    "type": "object",
                    "properties": {
                        "namespace": {
                            "type": "string",
                            "pattern": "^[A-Za-z]\\w*$"
                        }
                    }
                },
                "extras": {}
            },
            "additionalProperties": false
        },
        "instructions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "^[A-Za-z]\\w*$"
                    },
                    "format": {
                        "type": "string",
                        "pattern": "^[\\w\\s\\[\\]:,|]*$"
                    },
                    "condition": {
                        "type": "object",
                        "patternProperties": {
                            "^[A-Za-z]\\w*$": {
                                "type": "string",
                                "pattern": "^[\\w\\s\\-!=><]*$"
                            }
                        },
                        "additionalProperties": false
                    },
                    "extras": {}
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "format"
                ]
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "machine",
        "instructions"
    ]
}